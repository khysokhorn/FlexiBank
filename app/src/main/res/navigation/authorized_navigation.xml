<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.nexgen.flexiBank.module.view.auth.fragment.LoginFragment"
        app:defaultNavHost="true">
        <action
            android:id="@+id/action_LoginFragment_to_OtpChoiceFragment"
            app:destination="@id/OtpChoiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/OtpChoiceFragment"
        android:name="com.nexgen.flexiBank.module.view.auth.fragment.OtpChoiceFragment"
        tools:layout="@layout/fragment_otp_choice">

        <action
            android:id="@+id/action_OtpChoiceFragment_to_OtpVerifyFragment"
            app:destination="@id/OtpVerifyFragment" />
    </fragment>


    <fragment
        android:id="@+id/OtpVerifyFragment"
        android:name="com.nexgen.flexiBank.module.view.auth.fragment.OtpVerifyFragment"
        tools:layout="@layout/fragment_otp_verify">

        <action
            android:id="@+id/action_OtpVerifyFragment_to_IdentityVerifyFragment"
            app:destination="@id/IdentityVerifyFragment" />
    </fragment>

    <fragment
        android:id="@+id/IdentityVerifyFragment"
        android:name="com.nexgen.flexiBank.module.view.auth.fragment.IdentityVerifyFragment"
        tools:layout="@layout/fragment_identity_verify">

    </fragment>

</navigation>