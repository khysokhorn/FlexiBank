<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flexiBankText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlexiBank"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/orangeDrop"
        android:layout_width="16dp"  android:layout_height="16dp"
        android:src="@drawable/orange_dot"
        android:visibility="invisible" app:layout_constraintTop_toTopOf="@+id/flexiBankText"
        app:layout_constraintStart_toStartOf="@+id/flexiBankText"
        app:layout_constraintEnd_toEndOf="@+id/flexiBankText"
        app:layout_constraintBottom_toBottomOf="@+id/flexiBankText"
        app:layout_constraintHorizontal_bias="0.73" />
</androidx.constraintlayout.widget.ConstraintLayout>