<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FlexiBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_dark_green</item>
        <item name="colorPrimaryVariant">@color/gradient_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_dark_green</item>
        <item name="colorSecondaryVariant">@color/gradient_dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FlexiBank" parent="Base.Theme.FlexiBank" />

    <style name="AppThemeBase" parent="Base.Theme.FlexiBank">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/white</item>
    </style>

    <style name="start_savin">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>