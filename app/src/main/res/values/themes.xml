<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FlexiBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_dark_green</item>
        <item name="colorPrimaryVariant">@color/gradient_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_dark_green</item>
        <item name="colorSecondaryVariant">@color/gradient_dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="font">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FlexiBank" parent="Base.Theme.FlexiBank" />

    <style name="AppThemeBase" parent="Base.Theme.FlexiBank">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/white</item>
    </style>

    <style name="start_savin">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:fitsSystemWindows">false</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:padding">16dp</item>
        <item name="textStyle">bold</item>
    </style>

    <style name="buttonOutlineStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fitsSystemWindows">false</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:padding">16dp</item>
        <item name="textStyle">bold</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

</resources>