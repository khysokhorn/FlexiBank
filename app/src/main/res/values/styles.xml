<resources>

    <style name="Widget.Theme.FlexiBank.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@drawable/bg_spinner_dropdown</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bgCircleImageActive">
        <item name="android:background">@drawable/bg_circle_blue_16</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="bgCircleImageInActive">
        <item name="android:background">@drawable/bg_circle_gray_16</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="cardMenu">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

</resources>